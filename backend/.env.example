# Database (para Docker Compose)
DB_USER=postgres
DB_PASS=postgres
DB_NAME=bookstore

# CORS (array JSON)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# JWT (mínimo 32 caracteres!)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_EXPIRES=10m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_REFRESH_EXPIRES=7d

# Bcrypt
SALT=10

# Admin (criado automaticamente no seed)
ADMIN_EMAIL=admin@bookstore.com
ADMIN_PASSWORD=Admin123456
ADMIN_NAME=Administrator

# Cloudinary (obrigatório para upload de imagens)
# Crie conta gratuita em: https://cloudinary.com/users/register/free
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAPI (opcional)
OPENAPI_URL=/api-docs